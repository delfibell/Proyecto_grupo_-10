        <%- include("../partials/head")%>
        <link rel="stylesheet" href="/css/formularioDeLogin.css">
    </head>
<body>

    <%- include("../partials/header")%> <!-- Se importa el header desde los archivos parciales -->

    <main>
       
        <div class="container">
           <div class="crearCuentaForm">
                <div class="login">
                    <p>INGRESÁ A TU CUENTA</p>
                </div>
                <form action="/users/login" method="POST">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="input-box" placeholder="Ingresá tu email" required>
                    <% if (locals.errors && errors.email) { %> 
                        <div class="error-text">
                            <%= errors.email.msg %>
                        </div>
                    <% } %> 
                    <label for="contraseña">Contraseña</label> 
                    <input type="password" name="password" class="input-box" placeholder="Ingresá tu contraseña" required> 
                    <div class="rememberMe"><p>Recordarme</p><input type="checkbox" class="checkbox" name="recordar"/>
                    </div>
                    <button type="submit" value="Registrar">Ingresar</button>
                    <p class="CuentaOK">¿Primera vez en OFT?&nbsp;&nbsp;<a href="/users/register">Creá tu cuenta</a></p>
                </form>
           </div>
       </div> 
    
    </main>
    
    
    
    
    
    
    
    

<!DOCTYPE html>
<html lang="es">
  <head>
  <%- include("./partials/head")%>
  <link rel="stylesheet" href="/css/index.css">
  
  </head>
  <body>
  <%- include("./partials/header")%> <!-- Se importa el header desde los archivos parciales --> 
    <main>
      <section class="index-banner">
        <div class="banner">
         </div>
      </section>
     
      <h1>PRODUCTOS</h1>
      <section class="products-section">
      <h2 class="products">NUEVOS PRODUCTOS</h2>
      <section class="cards1"> 
        <% products.filter(product => product.idType == 1).forEach(product => { %>
        <article id="article">
            <ul>
              <div>
                <li class="imagen"><img class="imag" src="/img/catalogo/<%= product.image %>" width="260px"></li>
              </div>
              <div>
                <li class="productoNombre"><p><%= product.name %></p></li> 
                <li class= "productoAroma"><p><%= "Aroma: " + product['productFragance.fragance'] %></p></li>
                <li class= "productoTamanio"><p><%= "Tamaño: " + product['productSize.size'] %></p></li>
              </div>
              <div class="precioYDescuento">
                <h2><%= "$" + product.price %> </h2>
                <p class="descuento"> <%= product['productDiscount.discount'] + "% OFF"%></p>
              </div>
                <div class="cajaChica"> 
                    <button id="detalles" class="detalles"><a href="products/<%= product.id %>" style="color: white">Más Detalles </a></button>
                    <button class="comprar"><a href="/carrito"><i id="carrito" class="fa fa-shopping-cart" aria-hidden="true"></i>&nbsp;&nbsp;Comprar</a></button>
                </div>
            </ul>
        </article>
        <% }) %> 
      </section>


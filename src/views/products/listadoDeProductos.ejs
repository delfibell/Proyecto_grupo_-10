                    <a href="#perfumes">PERFUMES</a>
                </li>
                <li>
                    <a href="#productos3">ACCESORIOS</a>
                </li>
            </ul> 
        <section class="cards1"> 
            <% products.filter(product => product.category != "Perfumes").forEach(product => { %>
            <article id="article">
                <ul>
                    <li class="imagen"><img class="imag" src="/img/catalogo/<%= product.image %>" width="260px"></li>
                    <li class="corazon"><i class="fa-regular fa-heart"></i></li>
                    <li class="productoNombre"><p><%= product.name %></p></li> 
                    <h2><%= product.price %></h2>
                    <div class="cajaChica"> 
                        <div id="detalles" class="detalles"><p>+ <a href="products/<%= product.id %>"> Detalles </a></p></div>
                        <div class="comprar"  onclick="window.open('newurl.html','mywindow');"><i id="carrito" class="fa fa-shopping-cart" aria-hidden="true"></i><p>Comprar</p></div> 
                    </div>
                    <li id="txt" class="texto"><%= product.description %></li> 
                </ul>
            </article>
            <% }) %> 
        </section>
        <h2 id="perfumes">PERFUMES</h2>
        <section class="cards2">
            <% products.filter(product => product.category == "Perfumes").forEach(product => { %>
                <article id="article">
                    <ul>
                        <li class="imagen"><img class="imag" src="/img/<%= product.image %>" width="260px"></li>
                        <li class="corazon"><i class="fa-regular fa-heart"></i></li>
                        <li class="productoNombre"><p><%= product.name %></p></li> 
                        <h2><%= product.price %></h2>
                        <div class="cajaChica"> 
                            <div  id="detalles"  class="detalles"><p>+ Detalles </p></div>
                            <div class="comprar"   onclick="window.open('newurl.html','mywindow');"><i id="carrito" class="fa fa-shopping-cart" aria-hidden="true"></i><p>Comprar</p></div> 
                        </div>
                        <li id="txt" class="texto"><%= product.description %></li> 
                    </ul>
                </article>
                <% }) %>
        </section>  

        <h2 id="productos3" >ACCESORIOS</h2>
        <section id="cards3"  class="cards1"> 
            <% products.filter(product => product.category == "Accesorios").forEach(product => { %>
                <article id="article">
                    <ul>
                        <li class="imagen"><img class="imag" src="/img/<%= product.image %>" width="260px"></li>
                        <li class="corazon"><i class="fa-regular fa-heart"></i></li>
                        <li class="productoNombre"><p><%= product.name %></p></li> 
                        <h2><%= product.price %></h2>
                        <div class="cajaChica"> 
                            <div id="detalles" class="detalles"><p>+ Detalles </p></div>
                            <div class="comprar" onclick="window.open('carrito.html','mywindow');"><i id="carrito" class="fa fa-shopping-cart" aria-hidden="true"></i><p>Comprar</p></div> 
                        </div>
                        <li id="txt" class="texto"><%= product.description %></li> 
                    </ul>
                </article>
                <% }) %>
        </section>

        <form class="nuevoProducto" action="/products/create" method="GET">
            <button type="submit" class="redirec-login">Cre√° un nuevo producto</button>
        </form>
    </main>
    
    <%- include("../partials/footer")%> <!-- Se importa el footer desde los archivos parciales -->

</body>
</html>